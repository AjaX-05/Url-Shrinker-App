<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortner</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <h4>Welcome, <%= userEmail %>!</h4>
      <form class="form-group" action="/bigUrl" method="post">
        <h5 class="text-center">Enter URL</h5>

        <div class="form-group">
          <label for="input-url">Enter URL</label>
          <input
            class="form-control"
            type="url"
            name="input_url"
            id="input-url"
            required
          />
        </div>

        <button class="mt-2 btn btn-success btn-block" type="submit">
          Submit
        </button>
      </form>

      <table class="table table-striped mt-4">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Shrinked URL</th>
            <th>Clicks</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(function(shortUrl){ %>
          <tr>
            <td>
              <a target="_blank" href="<%= shortUrl.fullUrl %>">
                <%= shortUrl.fullUrl %>
              </a>
            </td>
            <td>
              <a target="_blank" href="/<%= shortUrl.shortUrl %>">
                <%= shortUrl.shortUrl %>
              </a>
            </td>
            <td><%= shortUrl.clicks %></td>
            <td>
              <!-- Trash Button -->
              <form action="/delete/<%= shortUrl.shortUrl %>" method="post">
                <button type="submit" class="btn btn-danger">
                  <i class="bi bi-trash-fill"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>

          <div class="mt-5 text-center">
            <a href="/home" class="btn btn-primary">Back to Home</a>
          </div>
        </tbody>
      </table>
    </div>
  </body>
</html>
